generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "postgresql"
  // this is no longer allowed in prisma after prisma 7+ is intrdouced
  // url=env("DATABASE_URL")
}



model User {
   id String @id @default(uuid())
   name String
   email String @unique
   password String

   createdAt DateTime @default(now())
}


